@import 'colors';

.inventory-content{
  position: relative;
  top: 150px;
}

.inv{
  background: $white;
}

.row-inv-tab{
  background: $light-blue;
  height: 45px;
}

#take-material, #all-takings,{
  position: relative;
  text-decoration: none;
  border: 5px solid $light-blue;
  top: 10px;
}


.printer-inv,.hardrive,.download-export-inv{
  position: relative;
  right: 5px;
  font-size: 15pt;
  top: 10px;
  border: 5px solid $light-blue;
}

.download-export-inv{
  padding-right: 5px;
}

.add, .minus, .eye{
  font-size: 17pt;
  vertical-align: middle;
}


.add-material{
  position: relative;
  text-decoration: none;
  top: 10px;
}

.eye{
  padding-right: 4%;
}

.ic-inv{
  font-size: 15pt;
  color: $darker-grey;
  text-decoration: none;
}


.ic-inv:hover{
  font-size: 15pt;
  color: $darker-grey;
  text-decoration: none;
}

.th-inv{
  background: $light-blue-grey;
}


.tf-inv{
  background: $light-blue-grey;
}
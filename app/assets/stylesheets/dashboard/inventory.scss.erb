@import 'colors';

.inventory-content{
  position: relative;
  top: 150px;
}

.inv{
  background: $white;
}



.row-inv-tab{
  background: $light-blue;
}

#take-material, #all-takings{
  font-family: Roboto;
  font-size: 15pt;
  padding-left: 1%;
  padding-top: 15px;
  color: $darker-grey;
  text-decoration: none;
}

.add,.minus,.eye{
  font-size: 17pt;
  vertical-align: middle;
}

.eye{
  padding-right: 4%;
}

.ic-inv{
  font-size: 15pt;
  color: $darker-grey;
  text-decoration: none;
}


.ic-inv:hover{
  font-size: 15pt;
  color: $darker-grey;
  text-decoration: none;
}

.th-inv{
  background: $light-blue-grey;
}


.tf-inv{
  background: $light-blue-grey;
}
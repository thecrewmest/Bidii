@import 'colors';



#overviewTab{
  background: #D8DDE6;
  font-family: Roboto;
  font-size: 12pt;
  height: 40px;
  position: absolute;
  top: 110px;
  padding-top: 10px;
  text-align: left;
  width: 100%;

}


.logo-bar{
  background: #FFFFFF;
}



.top-header-bar{
  background: #FFFFFF;
}

.drill-tab{
  background: $light-blue;
  border-bottom: 1px solid $light-green-blue;
}


.drill-tab > a {
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
  margin: 6px 0 0 0;
  padding: 0;

}

.drill-tab > a span:first-child {
  vertical-align: text-bottom;
  color: $darkest-grey;
}

.drill-tab > a span:last-child {
  font-size: 10.67pt;
  padding-right: 10px;
  font-family: Roboto, 'Sans-Serif';
}



.drill-tab > a:hover {
  text-decoration: none;

}



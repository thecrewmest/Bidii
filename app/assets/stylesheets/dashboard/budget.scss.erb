}

.budget-td-6{
  width: 80px;
  text-align: center;
}

.budget-td-7{
  width: 300px;
  text-align: center;
}


.budget-circle{
  height: 150px;
  width: 150px;
  border-radius: 80px;
  background: $light-blue;
  margin-left: 25%;
  padding-top: 12%;
}

.budget-circle > h4 {
  padding: 0;
}

.budget-circle > h3 {
  margin-top: 0;
}

.plus, .equal{
  font-size: 25pt;
}



.bf{
  position: relative;
  border-top: 15px solid $white;
  font-size: 14pt;
}


.budget-breakdown{
   padding-top: 5%;
  background: $white;
}

.budget-breakdown table tr > td {
  padding: 5px 0;
}

.th-b-pc{
  width: 60px;
  background: $light-blue;
  text-align: center;
}

.th-b-t{
  width: 100px;
  margin-left: 5px;
  background:$light-blue;
  border-left:10px solid white;
  text-align: center;
}


.b-progress-bar-div{
  width: 100%;
}


.th-b-percent{
  width: 40px;
  background: $bidii-red;
  text-align: center;
  height: 20pt;
  padding-top: 5px;
}



.th-b{
  width: 100px;
  background: $light-blue;
  text-align: center;
  height: 20pt;
  padding-top: 5px;
}



.desc-b{
  width: 97%;
  height: 25pt;
  font-family: Roboto;
  font-size: 12pt;
}

.bb{
  text-align: center;
  height: 200px;
}

.tf-b{
  font-weight: bold;
  text-align: center;
}

.th-ogtwb{
  margin-right: 10px;
  border-right: 15px solid $white;
}

.table-twb{
  height: 150px;
}





















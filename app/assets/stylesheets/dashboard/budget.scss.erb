@import 'colors';

.budget-table{
  position: relative;
  top: 20px;
  text-align: center;
  background: $white;
  font-family: Roboto;


}

.budget-row{
  background: $white;
}

.tb{
  background: $white;
}
.info-panel{
  height: 40px;
  background: $white;
  font-family: Roboto;
  font-size: 12pt;
  padding-top: 10px;
  border-bottom: 1px solid $light-blue-grey;
}

td[class*="budget-td-"] {
  font-size: 15px;
  padding: 0;
  margin: 0;
}

.budget-td-1 {
  width: 300px;
  text-align: center;
}

.budget-td-2{
  width: 80px;
  text-align: center;
}


@import 'colors';


.add-task-hammer{
  vertical-align: middle;
  font-size: 15pt;
  color: $bidii-green;
  padding-right: 15px;
}


.navbar-nav > li > a{
  color: $darker-grey;
}


.add-task{
  text-decoration: none;
}


.add-task:hover{
  text-decoration: none;
}

.show-number-of-rows{
  background: $white;
  height: 70px;
  padding-left: 40px;
  padding-top: 20px;
  font-size: 12pt;
}


.task-table-div{
  top: 100px;
  border: 1px solid $white;
  background: $white;
  padding: 0px 10px 0px 10px;
}

.task-table{
  background: $white;
  padding-right: 20px;
  font-size: 10pt;
  font-family: Roboto;

}



.word-task{
  padding-left:-2px;
  font-size: 15pt;
  color: $darkest-grey;
}



.pdf-task{
  padding-right: 0px;
  font-size: 15pt;
  color: $darkest-grey;
}

.ic{
  position: relative;
  top: 5px;
}

.printer, .hardrive{
  font-size: 18pt;
  color: $darkest-grey;
}



.search-div{
  text-align:right;
  padding-right: 20px;
}

.search{
  padding-left: 20px;
  padding-left: 25px;
  border: none;
}


.funnel{
  position: absolute;
  top: 10px;
  left: 80%;
  font-size: 13pt;
  color: $darkest-grey;
}




.task-filter{
  text-decoration: none;
}


.task-filter:hover{
  text-decoration: none;
}

#options{
  margin-left: 20px;
  margin-right: 20px;
  width: 60px;
}

.task-th{
  width: 160pt;
  text-align: center;
  padding: 0px 10px 0px 10px ;
  background: $light-blue-grey;
}


.task-td{
  width: 160pt;
  text-align: center;
  padding: 8px 10px 0px 10px ;

}

.tth-1{
  width: 10pt;
  padding-left: 0px;

}

.tth-2{
  width: 300pt;
}

.tth-7{
  width: 200pt;
}


.tth-0{
  width: 10px;
}

.ttd-1{
  width: 10px;
  text-align: left;
  font: my-fonts;
}


.ttd-0{
  width: 10px;

}


.check-box{
  height: 20px;
  width: 15px;
  vertical-align: middle;
}


.check-box:checked{
  color: $bidii-green;
}

.task-progress-bar-div{
  position: relative;
  width: 100%;
  height: 10pt;
  background: $darker-grey;
}

.action-task{
  color: $darkest-grey;
   text-decoration: none;
  font-size: 15pt;
  padding: 0px 5px 0px 5px;

}

.action-task:hover{
  text-decoration: none;
  background: $light-blue;
}

.task-tf{
  text-align: center;
  background: $light-blue-grey;
}



.magnify-task{
  position: absolute;
  left: 33%;
  font-size: 13pt;
  top: 0.5px;
}

.number-of-rows{
  padding-left: 20px;
  font-size: 12pt;
}
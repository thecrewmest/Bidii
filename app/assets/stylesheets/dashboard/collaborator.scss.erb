@import 'colors';

.collaborator-tab{
  background: $light-blue;
  height: 45px;
  padding-top: 12px;
}


.add-collabo{
  font-size: 20pt;
  color: $darker-grey;
  padding-top: 4px;
}

#add-collaborator{
  text-decoration: none;
}



#add-collaborator:hover{
  text-decoration: none;
}


.project-collab{
  padding-top: 10px;
}


.p-title{
  border-bottom: 1px solid $light-blue-grey;
  height: 35pt;
}

.colabo-div,{
  position: relative;
  top: 150px;
  font-family: Roboto;
  font-size: 12pt;
  background: $white;
}

.pencil-collabo{
   position: relative;
  font-size: 15pt;
  top: 10px;
  vertical-align: middle;
  padding-left: 10px;

}

.container-collaborator{
  position: relative;
  top: 50px;
}



.collaborator-circle{
  height: 150px;
  width: 150px;
  background: $light-blue;
  background-image: url(<%= asset_path('CollaboratorDefaultImage.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
  border-radius: 110px;
  margin-left: 20%;
  border: 2px solid $light-green-blue;
}

.cc1 {
  background-image: url(<%= asset_path('collaborator4.jpeg') %>);
  background-repeat: no-repeat;
  background-size: cover;
}



.cc4{
  height: 150px;
  width: 150px;
  background: $light-blue;
  background-image: url(<%= asset_path('collaborator3.jpeg') %>);
  background-repeat: no-repeat;
  background-size: contain;
  border-radius: 110px;
}


.collaborator-circle-row{
  padding-left: 10%;

}

.circle-td{
  width: 400px;
  text-align: center;
  padding-left: 4%;
}


.collaborator-table{
  position: relative;
  top: 25px;
  background: $white;
  overflow: scroll;
  font-family: Roboto;
}

.collaborator-details{
  width: 100%;
  text-align: center;
  font-size: 10pt;
  padding-right: 20px;
  line-height: 7px;
  padding-top: 10px;
}


.edit-collabo{
  color: $darker-grey;
  text-decoration: none;
}


.edit-collabo:hover{
  text-decoration: none;
}

.edit-circle{
  position: relative;
  height: 40px;
  width: 40px;
  border-radius: 20px;
  border: 1px solid $light-blue;
  background: $white;
  top: 70%;
  padding-top: 10px;
}


























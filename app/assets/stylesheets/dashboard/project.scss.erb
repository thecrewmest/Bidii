@import 'colors';


#logo{
  height:30px;
  width: 70px;
}


#projectBodyDiv{
  margin-top: 12%;
  background: $white;
}

#homeProjects{
  padding-top: 1px;

}


.project-item1{
  height: 300px;
  background: #D8DDE6;
  border: 25px solid $white;
}

.project-item{
  height: 300px;
  background: #D8DDE6;
  border: 25px solid $white;
  background-image: url(/assets/project-default.png);
  background-position: 50% 40%;
  background-repeat: no-repeat;
  background-size: 68px 54px;

}

.addcircle{
  position: relative;
  font-size: 40pt;
  top: 35%;
  left: 40%;
  color: #494545;
}

.addProject {
  position: relative;
  top: 44%;
  left: 9%;
  color: #5C676A;



}

.edit-icon-project{
  position: absolute;
  font-size: 14pt;
  padding-left: 2px;
  color: #494545;
  top: 3px;

}


#projectDefaultImage{
  width: 70px;
  height: 70px;
  position: relative;
  top: 27%;
  left: 36%;

}


.progressbar-div{
  position: absolute;
  height: 16px;
  background: #5C676A;
  top: 80%;
  width: 100%;
  left: 0.3%;
  padding: 0;
}


.pbar-border-radius{
  border-radius: 0;
}

.project-details{
  position: absolute;
  height:33px;
  background: #494545;
  top: 86.4%;
  width: 100%;
  left: 0.3%;
  padding-top: 5px;
  padding-right: 5px;
  font-family: Roboto;
}

.percent{
  font-size: 15pt;
}

.project-name{
  color: $white;
  font-size: 14px;
  font-family: Roboto;
  padding-left: 10px;
  padding-top: 3px;
}



.circle-edit-project{
  height: 23px;
  width: 23px;
  border-radius: 25px;
  background: $white;
  position: absolute;
  left: 90%;
  top: 2%;
  padding-top: 7px;
}

.my-fonts{
  font-size: 12pt;
  font-family: Roboto,  'Sans-Serif';
}


.edit-project-a:hover{
  color: $white;
}

.project-percentage-complete-green{
  color: #5C8B5C;
  font-size: 20pt;
  font-family: Roboto,  'Sans-Serif';
  font-weight: bold;
  margin-bottom: 4px;}

.project-percentage-complete-orange{
  color: #FDAD4E;
  font-size: 20pt;
  font-family: Roboto,  'Sans-Serif';
  font-weight: bold;
  margin-bottom: 4px;
}

.project-percentage-complete-danger{
  color: #D9534F;
  font-size: 20pt;
  font-family: Roboto,  'Sans-Serif';
  font-weight: bold;
  margin-bottom: 4px;
}

.percentage{
  font-size: 12pt;
  vertical-align: middle;
}

.archived{
  background:  #D8DDE6;
  height: 20px;
  margin-top: 30px;
  font-family: Roboto,  'Sans-Serif';
  font-size: 14px;
  text-align: center;
}

.archived-table-th{
  text-align: center;
  background: #f5f5f5;
  font-family: Roboto,  'Sans-Serif';
  height: 40px;
  padding-top: 10px;
  width: 330px;
}

.archived-table-td{
  text-align: center;
  background:  $white;
  font-family: Roboto,  'Sans-Serif';
  height: 40px;
  padding-top: 10px;
  width: 330px;
}

.restore-archive{
  background: $darker-grey;
  width: 80px;
  position: relative;
  left: 38%;
  color: $white;
  height: 25px;
  padding-top: 4px;
}

.th-td-name{
  text-align: left;
  padding-left: 30px;
}

.archived-red{
  color:$bidii-red;
}


.action-edit{
  text-align: right;
  font-size: 14px;
  font-family: Roboto, 'Sans-Serif';
}

.action-delete{
  text-align: left;
  font-size: 14px;
  font-family: Roboto,  'Sans-Serif';
}


.restore-a{
  text-decoration: none;
  height: 30px;
  width: 100px;
  color:  $white;
  font-size: 14px;
  font-family: Roboto,  'Sans-Serif';
}


.restore-a:hover{
  text-decoration: none;
  background: #5cb85c;
  color:  $white;
}

.action-div{
  background: #5C676A;
  margin-left: 35%;

}


.p-l-r-20{
  padding-left: 25px;
  padding-right: 25px;
}

.archive-list-action{
  padding-top: 10px;

}





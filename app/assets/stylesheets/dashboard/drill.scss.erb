.drill-content{
  position: relative;
  min-height: 200px;
  top: 148px;
}


.icon{
  font-size: 15pt;
}


.drill-table-head{
  background: #ECEFF5;
}



.hammer{
  position: relative;
  top: 10pt;
  vertical-align: middle;
  font-size: 15pt;
  padding-right: 10px;
}


.current-progress, .expected-progress{
  text-align: center;
}



.dth-tasks{
  width: 240px;
}

.dth-duedate{
  width: 120px;
}

.dth-status{
  width: 80px;
}

.dtb-sb{
  text-align: center;
}














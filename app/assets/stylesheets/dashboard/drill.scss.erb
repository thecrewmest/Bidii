.drill-sidebar{
  position: relative;
  top: 148px;
  padding-bottom: 20px;
  padding-left: 27px;
  border: none;

  /*overflow-y: scroll;*/
  background: $light-blue;
}

.pdf, .word{
  padding-top: 14px;
  font-size: 15pt;
}



.word{
  padding-left: 25px;
  padding-right: 8px;
}

.pdf{
  padding-right: 8px;
}
.panel-body{
  background: $light-blue;
}

.download-file{
  text-decoration: none;
  color: inherit;
  margin-top: 30px;
}

.dth-assignee{
  text-align: center;
}

.download-file:hover{
  text-decoration: none;
}

.panel-heading .accordion-toggle{
  background: $light-grey;
}



.accordion-custom .panel-heading .accordion-toggle.collapsed {
  background: $light-blue-grey;
}


.accordion-custom .panel-heading .accordion-toggle{
  background: $light-blue-grey;
}

.drill-criteria {
  font-family: Roboto, 'Sans-Serif';
}

.drill-content > div > div:first-child {
  margin: 12px 0 3px 0;
}

.drill-criteria > .head {
  margin: 14px 0 18px 0;
  padding: 0 15px;
}

.criteria-and-spin {
  border-bottom: 1px solid $light-green-blue;
}

.criteria{
  font-weight: normal;
  /*border: 1px dotted #000;*/
}

.rl{
  position: absolute;
}

.drill-down-instruction{
  position: relative;
  top: 15px;
}

.magnify{
  position: absolute;
  margin-top: 10px;
  padding-left: 25px;
}

